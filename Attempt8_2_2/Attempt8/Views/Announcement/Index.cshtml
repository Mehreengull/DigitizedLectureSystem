                    @Html.DisplayNameFor(model => model.TeacherId)
                </dt>-->
                <!--<dd>
                    @Html.DisplayFor(model => item.TeacherId)
                </dd>-->

                <!--<dt>
                    @Html.DisplayNameFor(model => model.Text)
                </dt>-->

                <dd>
                    @Html.DisplayFor(model => item.Text)
                </dd>
               


            </dl>
            @if ((DLSInterface.isTeacher(DLSInterface.loggedEmail)) && (item.TeacherId == DLSInterface.GetIdByEmail(DLSInterface.loggedEmail)))
            {
                <a class="btn btn-primary" href=@Url.Action("Delete", "Announcement", new { id = item.id })>Delete</a>
            }
        </div>
        <br />
    }
}


